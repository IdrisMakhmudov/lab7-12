/*
2. Описать функцию Sign(X) целого типа, возвращающую для
вещественного числа X следующие значения:
−1, если X < 0; 0, если X = 0; 1, если X > 0.
*/
#include <iostream>
#include <cmath>
using namespace std;

int Sign()
{
    double x;
    cin>>x;
    if (x<0) x=-1;
    else
    {
        if(x==0) x=0;
        else
        x=1;
    }
cout<<x;
}

int main() 
{
Sign();
return 0;
}
